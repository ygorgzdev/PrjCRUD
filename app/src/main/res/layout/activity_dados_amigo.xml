<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#C7D0ED"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Linha com Nome e Celular -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txvNome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Nome"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txvCelular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Celular"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txvLatitude"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Latitude"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txvLongitude"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Longitude"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>
>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnEditar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#FFC107"
                android:contentDescription="Editar"
                android:src="@drawable/edit_24dp_1f1f1f_fill0_wght400_grad0_opsz24" />

            <ImageButton
                android:id="@+id/btnExcluir"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#D13636"
                android:contentDescription="Excluir"
                app:srcCompat="@drawable/delete_24dp_1f1f1f_fill0_wght400_grad0_opsz24" />

            <ImageButton
                android:id="@+id/btnSms"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#8DB0CC"
                android:contentDescription="SMS"
                app:srcCompat="@drawable/chat_24dp_1f1f1f_fill0_wght400_grad0_opsz24" />

            <ImageButton
                android:id="@+id/btnLigar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#00A6F6"
                android:contentDescription="Ligar"
                android:tint="#040404"
                app:srcCompat="@drawable/call_24dp_1f1f1f_fill0_wght400_grad0_opsz24" />

            <ImageButton
                android:id="@+id/btnWhats"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#4DB651"
                android:contentDescription="WhatsApp"
                android:tint="#FDFDFD"
                app:srcCompat="@drawable/whatsapp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>